<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renrenlab.rlab.dao.KeywordInfoDao">
    <resultMap id="BaseResultMap" type="com.renrenlab.rlab.model.KeywordInfo">
        <result column="k_id" jdbcType="BIGINT" property="kId"/>
        <result column="keyword" jdbcType="VARCHAR" property="keyword"/>
        <result column="k_count" jdbcType="INTEGER" property="kCount"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        k_id, keyword, k_count, create_time, modify_time
    </sql>
    <select id="selectKeywordInfos" resultMap="BaseResultMap">
        SELECT
        keyword,
        SUM(k_count) "kCount"
        FROM rlab_common_info.t_keyword_info
        WHERE create_time BETWEEN DATE(#{beginTime}) AND DATE(#{endTime}) + 1 :: INT
        GROUP BY keyword
        ORDER BY "kCount" DESC
        <if test="limit != null">
            limit #{limit}
        </if>
    </select>

    <insert id="insertSelective2" parameterType="com.renrenlab.rlab.model.KeywordInfo">
        insert into rlab_common_info.t_keyword_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="keyword != null">
                keyword,
            </if>
            <if test="kCount != null">
                k_count,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="keyword != null">
                #{keyword,jdbcType=VARCHAR},
            </if>
            <if test="kCount != null">
                #{kCount,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <insert id="insertSelective" parameterType="list">
        insert into rlab_common_info.t_keyword_info(keyword,k_count) VALUES
        <foreach collection="infos" item="info" index="index" separator=",">
            (#{info.keyword,jdbcType=VARCHAR},#{info.kCount,jdbcType=INTEGER})
        </foreach>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.renrenlab.rlab.model.KeywordInfo">
        update rlab_common_info.t_keyword_info
        <set>
            <if test="kId != null">
                k_id = #{kId,jdbcType=BIGINT},
            </if>
            <if test="keyword != null">
                keyword = #{keyword,jdbcType=VARCHAR},
            </if>
            <if test="kCount != null">
                k_count = #{kCount,jdbcType=INTEGER},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

</mapper>