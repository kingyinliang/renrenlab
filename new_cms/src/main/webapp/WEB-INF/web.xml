<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>cms</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring/applicationContext.xml
        </param-value>
	</context-param>
		<!--配置日志文件-->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- <listener>
		<listener-class>com.renrenlab.cms.sys.listenter.CmsSessionListener</listener-class>
	</listener> -->
	<filter>
		<filter-name>WeixinAuthFilter</filter-name>
		<filter-class>com.renrenlab.cms.wechat.filter.WeixinAuthFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>WeixinAuthFilter</filter-name>
		<url-pattern>/wx/*</url-pattern>
	</filter-mapping>
		<filter-mapping>
		<filter-name>WeixinAuthFilter</filter-name>
		<url-pattern>/weixin/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.renrenlab.cms.communication.interceptor.AuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/bg/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<description>字符集过滤器</description>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
			<description>字符集编码</description>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<!-- 配置DispatcherServlet -->
	<servlet>
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- 配置springMVC需要加载的配置文件 spring-dao.xml,spring-service.xml,spring-web.xml 
			Mybatis - > spring -> springmvc -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring/spring-mvc.xml</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet</servlet-name>
		<!-- 默认匹配所有的请求 -->
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<!-- 验证码信息配置开始 -->
	<servlet>
		<servlet-name>validetImg</servlet-name>
		<servlet-class>com.renrenlab.cms.wechat.servlet.VerifyCodeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>validetImg</servlet-name>
		<url-pattern>/action/validetImg</url-pattern>
	</servlet-mapping>
	<!--验证码配置结束 -->
		<!-- 配置session超时时间，单位分钟 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>